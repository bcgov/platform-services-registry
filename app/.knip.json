{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "ignore": ["**/types/**/*.d.ts", ".next/**/*"],
  "ignoreDependencies": [
    "sharp",
    "prettier",
    "node-gyp",
    "@testing-library/react",
    "@testing-library/user-event",
    "@types/eslint-config-prettier",
    "@react-email/preview-server",
    "ts-jest",
    "ts-node",
    "eslint-config-next",
    "@next/swc-*",
    "@prisma/client"
  ],
  "rules": {
    "binaries": "off",
    "classMembers": "error",
    "dependencies": "error",
    "devDependencies": "error",
    "duplicates": "error",
    "enumMembers": "error",
    "exports": "error",
    "files": "error",
    "nsExports": "error",
    "nsTypes": "error",
    "types": "error",
    "unlisted": "off",
    "unresolved": "error"
  }
}
