{
  "git": {
    "commitMessage": "chore: release candidate v${version}",
    "tagName": "v${version}",
    "tagAnnotation": "${name}\n${changelog}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "pnpm changelog"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        {
          "file": "app/package.json",
          "path": "version",
          "prefix": ""
        },
        {
          "file": "app/package-lock.json",
          "path": "version",
          "prefix": ""
        },
        {
          "file": "app/package-lock.json",
          "path": "packages..version",
          "prefix": ""
        },
        {
          "file": "VERSION",
          "type": "text/plain",
          "consumeWholeFile": true
        }
      ]
    }
  }
}
