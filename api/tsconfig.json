{
  "compilerOptions": {
    "allowJs": false,
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": [
    "src/**/*",
    "__tests__/src/helper.ts"
  ],
  "compileOnSave": false
}