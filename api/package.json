{
  "name": "platform-services-registry",
  "version": "0.0.1",
  "description": "",
  "author": "Jason C. Leach <jason.leach@fullboar.ca>",
  "license": "Apache-2.0",
  "repository": "https://github.com/bcgov/platform-services-registry.git",
  "homepage": "https://github.com/bcgov/platform-services-registry",
  "bugs": "https://github.com/bcgov/platform-services-registry/issues",
  "keywords": [
    "github",
    "platform-services",
    "registry"
  ],
  "scripts": {
    "build": "NODE_ENV=production gulp",
    "build:doc": "mkdir -p public/doc/api/ && api2html -o public/doc/api/index.html -l shell,javascript--nodejs ./doc/api.yaml",
    "dev": "nodemon --watch src --inspect=0.0.0.0:9229 -e ts,tsx --exec node -r ts-node/register ./src/server.ts",
    "dev:docker": "nodemon -L --delay 1600ms --watch build --inspect=0.0.0.0:9229 -e js,json --nolazy ./build/server.js",
    "start": "node build/server.js",
    "test:lint": "NODE_ENV=test tslint src/**/*.ts",
    "test:schema": "swagger-cli validate doc/api.yaml",
    "test": "NODE_ENV=test jest __tests__",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "test:watch": "NODE_ENV=test jest --watch --notify --notifyMode=change --coverage",
    "eslint": "eslint 'src/**/*.ts' '__tests__/**/*.ts'"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@bcgov/common-nodejs-utils": "^0.1.21",
    "@octokit/auth": "^3.0.3",
    "@octokit/request": "^5.6.0",
    "@octokit/rest": "^18.7.1",
    "@types/dotenv": "^8.2.0",
    "axios": "^0.21.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "nats": "^1.4.12",
    "nconf": "^0.11.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.0",
    "transform-runtime": "0.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jest": "^25.2.3",
    "@types/nconf": "0.10.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "api2html": "^0.3.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^3.4.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^7.0.2",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "smee-client": "^1.1.0",
    "standard": "^14.3.4",
    "supertest": "^4.0.2",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^26.2.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">= 10.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
